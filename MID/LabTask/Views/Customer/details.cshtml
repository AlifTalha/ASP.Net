@model LabTask.DTOs.CustomerDTO

@{
    ViewBag.Title = "Customer Details";
}

<h2>Customer Details</h2>

<dl class="dl-horizontal">
    <dt>First Name</dt>
    <dd>@Model.FirstName</dd>

    <dt>Last Name</dt>
    <dd>@Model.LastName</dd>

    <dt>Email</dt>
    <dd>@Model.Email</dd>

    <dt>Phone</dt>
    <dd>@Model.Phone</dd>

    <dt>Address</dt>
    <dd>@Model.Address</dd>

    <dt>Date Joined</dt>
    <dd>@Model.DateJoined.ToString("yyyy-MM-dd")</dd>
</dl>

<a href="@Url.Action("List", "Customer")" class="btn btn-default">Back to List</a>
