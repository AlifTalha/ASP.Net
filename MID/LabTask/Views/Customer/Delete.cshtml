@model LabTask.DTOs.CustomerDTO

@{
    ViewBag.Title = "Delete Customer";
}

<h2>Delete Customer</h2>

<p>Are you sure you want to delete this customer?</p>

<div>
    <p><strong>Customer Id:</strong> @Model.CustomerId</p>
    <p><strong>First Name:</strong> @Model.FirstName</p>
    <p><strong>Last Name:</strong> @Model.LastName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone Number:</strong> @Model.Phone</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Joining Date:</strong> @Model.DateJoined</p>
</div>

<form action="/Customer/Delete/@Model.CustomerId" method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("List", "Customer")" class="btn btn-secondary">No, Cancel</a>
</form>
