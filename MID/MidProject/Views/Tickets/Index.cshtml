@model IEnumerable<FinalDemo.DTOs.TicketDTO>

@{
    ViewBag.Title = "Tickets";
}

<h2>Tickets</h2>

<p>
    <a href="@Url.Action("Add", "Tickets")" class="btn btn-primary">Add New Ticket</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ticket ID</th>
            <th>Issue</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.TicketId</td>
                <td>@ticket.Issue</td>
                <td>@ticket.Status</td>
                <td>
                    <a href="@Url.Action("Details", "Tickets", new { id = ticket.TicketId })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Tickets", new { id = ticket.TicketId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Tickets", new { id = ticket.TicketId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
