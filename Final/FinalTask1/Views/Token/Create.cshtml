@{
    ViewBag.Title = "Create Token";
}

<h2>Create Token</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post" action="@Url.Action("Create", "Token")">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="counterType">Select Counter Type:</label>
        <select id="counterType" name="counterType" class="form-control" required>
            <option value="" disabled selected>Select a counter type</option>
            <option value="medical">Medical</option>
            <option value="tourist">Tourist</option>
            <option value="business">Business</option>
            <option value="go">Go</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Generate Token</button>
</form>

<a href="@Url.Action("List", "Token")" class="btn btn-secondary">Back to Token List</a>
